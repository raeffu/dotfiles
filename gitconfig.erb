[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  co = checkout
  merge-diff = !sh -c 'git diff "$1^1"..."$1^2" "$@"' -
[color]
  diff = auto
  status = auto
  branch = auto
[color "status"]
  changed = magenta
  untracked = yellow
  localBranch = cyan
  remoteBranch = green
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = emacsclient -t
  autocrlf = input
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset%C(cyan)%d%Creset %s %C(blue)[%an]%Creset %C(magenta)[%cr]%Creset
[rerere]
  enabled = 1
[push]
  default = tracking
[branch]
  autosetuprebase = always
  autosetupmerge = true
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[mergetool "ediff"]
  cmd = emacsclient --eval \"(git-mergetool-emacsclient-ediff \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" \\\"$MERGED\\\")\"
  trustExitCode = true
[mergetool]
  prompt = false
[merge]
  tool = ediff
  defaultToUpstream = true
  conflictStyle = diff3
[pager]
  diff = diff-highlight | less
[log]
  graphColors = "#ff6e67", "#5af78e", "#f4f99d", "#caa9fa", "#ff92d0", "#9aedfe"
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
